@{
    //Do not use this page in production!
    ViewData["Title"] = "Claim overview";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"].</h2>
        
        <div class="form-group">
            <label>Your username</label>
            <input type="text" class="form-control" readonly value="@User.Identity.Name" >
        </div>
        <div class="form-group">
            <label>Your access token</label>
            <input type="text" class="form-control" readonly value="@ViewData["accessToken"]">
        </div>
        
        <div class="form-group">
            <label>Your id token</label>
            <textarea class="form-control" readonly rows="10">@ViewData["idToken"]</textarea>
        </div>
        
        <strong>Your claims inside the id token:</strong>
        <table class="table">
            <tr>
                <th>Claim</th>
                <th>Value</th>
                <th>Issuer</th>
            </tr>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>@claim.Issuer</td>
            </tr>
        }
        </table>
    </div>
</div>